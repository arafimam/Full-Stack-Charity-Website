<%- include('partials/navBar') %>

<link rel="stylesheet" href="/info.css">

<h1 style="text-align: center;">Things up for donation: </h1>
<% if (data.length <=1 ){ %>
    <div class="info">
        <h1>Add Post or wait for other users to post. Currently empty...</h1>
    </div>


<% } %>




    <% for (var i=1;i<data.length;i++){ %>

        <div class="info">
            <form accept="/viewPost" method="post">
                <p><input type="hidden" name="id" value="<%= data[i]._id %>"><%= i %></p>
            <hr/>
        <div class="row">
            
            <div class="col left">
                <div class="contact">
                    <h1 style="display: inline-block;">Contact information</h1><br>
                    <p style="display: inline-block;" >🧑Email: <%= data[i].username %> </p><br>
                    <p style="display: inline-block;">📞Contact Number: <%= data[i].phone %></p><br>
                </div>
                
            </div>
        </div>


        <div class="row">
            <div class="col left">
                <h3>Information: </h3>
                <p><%= data[i].Title %></p>
                <h3>Location: </h3>
                <p><%= data[i].Location %></p>
            </div>
            <div class="col right">
                <img src="images/<%= data[i].photoName %>"/>
            </div>
        </div>
        
        <% if (showButtons){ %>
            <button class="btn btn-dark" type="submit" name="action" value="like">👍 Interested (<%= data[i].likes %>)</button>
            <button class="btn btn-dark" type="submit" name= "action" value="dislike">👎 Not Interested (<%= data[i].dislikes %>)</button>
            <button class="btn btn-dark" type="submit" name= "action" value="comment">💬 View Comments</button>
            
        <% } %>

        <% if (showDelete){ %>
            <div class="info-1">
                <p>Object donated?</p>
                <p>Want to remove the post?</p>
                <button class="btn btn-dark" type="submit" name="action" value="delete">🗑️ Remove Post </button> 
            </div>
            
                  
        <% } %>
        
        
    </form>
        <hr/>
        </div>
        <br><br><br>
        
    <% } %>



<%- include('partials/footer') %>